<%- layout('/layouts/boilerplate') %>
    <div>
        <form action="/users/register" method="POST" class="needs-validation" novalidate>
            <div class="row">

                <div class="row mb-3">
                    <label class=" form-label" for="username">Username:</label>
                    <input class=" form-control" type="text" id='username' name="username" autocomplete="username" required>
                    <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Incorrect</div>
                </div>
                <div class="row mb-3">
                    <label class=" form-label" for="Email">Email:</label>
                    <input class=" form-control" type="email" id='Email' name="email" autocomplete="email" required>
                    <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Incorrect</div>
                </div>
                <div class="row mb-3">
                    <label class="form-label" for="password">Password:</label>
                    <input class="form-control" type="password" id='password' name="password" autocomplete="new-password" required>
                    <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Incorrect</div>
                </div>
                <button class=" btn btn-success">Register</button>
            </div>
        </form>
    </div>